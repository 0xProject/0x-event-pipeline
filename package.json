{
    "name": "0x-event-pipeline-evm",
    "type": "module",
    "version": "0.0.1",
    "description": "A node.js app for pulling 0x event info to inform things like staking.",
    "license": "Apache-2.0",
    "scripts": {
        "build": "pnpm tsc -b",
        "dev": "nodemon -r dotenv/config src/index.ts",
        "start": "node lib/src/index.js",
        "test": "pnpm jest",
        "migrate_and_start": "pnpm migrate:run && pnpm start",
        "rebuild_and_test": "run-s build test:all",
        "test:all": "run-s test test:db",
        "test:circleci": "pnpm test:coverage",
        "prettier": "prettier --write '{src,migrations}/**/*.{ts,tsx,json,md}'",
        "prettier:ci": "prettier --list-different '{src,migrations}/**/*.{ts,tsx,json,md}'",
        "preinstall": "npx only-allow pnpm",
        "test:coverage": "nyc npm run test:all --all && pnpm coverage:report:lcov",
        "coverage:report:lcov": "nyc report --reporter=text-lcov > coverage/lcov.info",
        "clean": "rm -rf lib",
        "lint": "eslint .",
        "migrate:run": "pnpm typeorm migration:run --config ./lib/src/ormconfig",
        "migrate:revert": "pnpm typeorm migration:revert --config ./lib/src/ormconfig",
        "migrate:create": "pnpm typeorm migration:create --config ./lib/src/ormconfig --dir migrations"
    },
    "devDependencies": {
        "@trivago/prettier-plugin-sort-imports": "^4.3.0",
        "@types/jest": "^29.5.11",
        "@types/node": "^8.10.66",
        "@types/node-cron": "^2.0.8",
        "@typescript-eslint/eslint-plugin": "^6.19.1",
        "eslint": "^7.32.0",
        "eslint-config-prettier": "^8.10.0",
        "eslint-import-resolver-typescript": "^3.6.1",
        "eslint-plugin-import": "^2.29.1",
        "eslint-plugin-jest": "^27.6.3",
        "jest": "^29.7.0",
        "make-promises-safe": "^5.1.0",
        "nodemon": "^2.0.22",
        "prettier": "^2.8.8",
        "prisma": "^5.8.1",
        "ts-jest": "^29.1.2",
        "ts-node": "^10.9.2"
    },
    "dependencies": {
        "@0x/api-utils": "^0.0.1",
        "@0x/dev-utils": "^5.0.3",
        "@0x/order-utils": "^10.4.28",
        "@0x/subproviders": "^8.0.1",
        "@prisma/client": "5.8.1",
        "@types/express": "^4.17.21",
        "@types/pino": "^6.3.12",
        "dotenv": "^8.6.0",
        "kafkajs": "^2.2.4",
        "node-cron": "^2.0.3",
        "pg": "^8.11.3",
        "pino": "^8.17.2",
        "prom-client": "^13.2.0",
        "reflect-metadata": "^0.1.14",
        "typeorm": "^0.2.45",
        "typescript": "^5.3.3",
        "viem": "^2.5.0"
    }
}
